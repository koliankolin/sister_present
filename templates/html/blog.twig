{% extends "layouts/main_layout.twig" %}

{% block title %}Наталья Горчакова{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
<body>
{% block mainHeader %}
    {{ parent() }}
{% endblock %}
{% block nav %}
    {{ parent() }}
{% endblock %}

<!--    Blog-->
    <section id="blog" class="py-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card-columns">
                        {% for post in posts %}
                            <div class="card">
                                <img src="{{ post.image }}" alt="" class="img-fluid card-img-top rounded-pill">
                                <div class="card-body">
                                    <h4 class="card-title">Post One</h4>
                                    <small class="text-muted">Автор: Наталья Горчакова</small>
                                    <p>Кол-во лайков: {{ post.likes_count }}</p>
                                    <hr>
                                    <p class="card-text">{{ post.text }}</p>
                                    <a href="{{ post.link }}">Ссылка на пост в инстаграм</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--    Footer-->

    {% block footer %}
        {{ parent() }}
    {% endblock %}

    {% block mainScripts %}
        {{ parent() }}
    {% endblock %}

<script>
        // Get the current year for the copyright
        $('#year').text(new Date().getFullYear());
    </script>
</body>

</html>
{% endblock %}