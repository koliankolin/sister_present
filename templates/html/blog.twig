{% extends "layouts/main_layout.twig" %}

{% block title %}Наталья Горчакова{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block body %}
<body>
{% block mainHeader %}
    {{ parent() }}
{% endblock %}
{% block nav %}
    {{ parent() }}
{% endblock %}

<!--    Blog-->
    <section id="blog" class="py-3">
        <div class="container">
            <div class="row">
                <div class="col">
                    <div class="card-columns">
                        {% for post in posts %}
                            <div class="card">
                                <img src="{{ post.img }}" alt="" class="img-fluid card-img-top rounded-pill">
                                <div class="card-body">
                                    <small class="text-muted">Автор: Наталья Горчакова</small>
                                    <p>Кол-во лайков: {{ post.likes }}</p>
                                    <p>Дата: {{ post.dt_inst }}</p>
                                    <hr>
                                    {% set text = post.text|split(' ') %}
                                    {% set len = 18 %}
                                    {% if text|length > 20 %}
                                        <p class="card-text">{{ text[:len]|join(' ') }} <span class="collapse" id="viewdetails_{{ loop.index }}">{{ text[len:]|join(' ') }}</span>
                                            <a data-toggle="collapse" class="collapsed btn btn-default btn-xs text-right" href="#viewdetails_{{ loop.index }}" aria-label="Expand/Collapse Card 1" aria-expanded="false" role="button">
                                                <i class="fa" aria-hidden="true"></i>
                                                <span class="sr-only">Expand/Collapse Card 1</span>
                                            </a>
                                        </p>
                                    {% else %}
                                        <p class="card-text">{{ post.text }}</p>
                                    {% endif %}
                                    <a href="{{ post.link }}">Ссылка на пост в инстаграм</a>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!--    Footer-->

    {% block footer %}
        {{ parent() }}
    {% endblock %}

    {% block mainScripts %}
        {{ parent() }}
    {% endblock %}

<script>
        // Get the current year for the copyright
        $('#year').text(new Date().getFullYear());
    </script>
</body>

</html>
{% endblock %}